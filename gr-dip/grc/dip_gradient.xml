<?xml version="1.0"?>
<block>
  <name>Image Gradient</name>
  <key>dip_gradient</key>
  <category>[Image Processing]/Core</category>
  <import>import dip</import>
  <make>dip.gradient($method)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Method</name>
    <key>method</key>
    <type>enum</type>
    <option>
      <name>Sobel</name>
      <key>sobel</key>
    </option>
    <option>
      <name>Prewitt</name>
      <key>prewitt</key>
    </option>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>float</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>outX</name>
    <type>float</type>
  </source>

  <source>
    <name>outY</name>
    <type>float</type>
  </source>

</block>
